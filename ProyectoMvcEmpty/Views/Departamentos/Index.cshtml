@model List<Departamento> 

<h1>Departamentos</h1>

<table class="table table-info">
    <thead>
        <tr>
            <th>Número</th>
            <th>Nombre</th>
            <th>Localidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Departamento d in Model)
            {
                <tr>
                    <td>@d.IdDepartamento</td>
                    <td>@d.Nombre</td>
                    <td>@d.Localidad</td>
                </tr>
            }
    </tbody>
</table>